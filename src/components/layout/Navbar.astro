---
import NavItems from "./NavItems.astro";

const { navItems, logo } = Astro.props;
---

<header class="lg:py-10 py-5 fixed top-0 left-0 w-full z-10 bg-theme-darkGrey">
  <nav
    class="flex justify-between items-center text-theme-white layout max-md:flex-col max-md:justify-center max-md:items-center gap-4"
  >
    <NavItems logo={logo} navItems={navItems} />
  </nav>
</header>
