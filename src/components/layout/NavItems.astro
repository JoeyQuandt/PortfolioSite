---
import { Icon } from "astro-icon/components";

interface Props {
  navItems: {
    name: string;
    link: string;
  }[];
  logo: {
    name: string;
    link: string;
  };
}

const { logo, navItems } = Astro.props;
---

<a href={logo.link}>
  <h2
    class="text-[2rem] font-bold transition duration-300 ease-out hover:text-theme-green"
  >
    {logo.name}
  </h2>
</a>
<ul class="flex justify-between gap-6">
  {
    navItems.map((item) => {
      return (
        <li>
          <a href={item.link}>
            <Icon
              name={item.name}
              class="text-2xl transition duration-300 ease-out hover:text-theme-green"
            />
          </a>
        </li>
      );
    })
  }
</ul>
