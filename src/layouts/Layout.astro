---
import "@/styles/globals.css";
import { SEO } from "astro-seo";
import ViewTransitions from "astro/components/ViewTransitions.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import client from "tina/__generated__/client";
interface Props {
  title: string;
}

const { title } = Astro.props;

const { data } = await client.queries.global_bloks({
  relativePath: "LayoutSection.md",
});
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title="Portfolio Joey Quandt | Frontend Developer"
      description="Based in the Netherlands, I'm a front-end developer passionate about building accessible web apps that users love."
      openGraph={{
        basic: {
          title: "Portfolio Joey Quandt | Frontend Developer",
          type: "image",
          image:
            "https://assets.tina.io/b058624d-39e0-4d6b-827b-61c706805965/joeyquandt-seo-default-image.jpg",
        },
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: "/joeyquandt-seo-default-image.png",
          },
          { name: "twitter:title", content: "Tinker Tailor Soldier Spy" },
          { name: "twitter:description", content: "Agent" },
        ],
      }}
    />
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
    <meta
      name="google-site-verification"
      content="bXLYuq-jwshmoidiKAIddGAJ3bDFYxyr_XtGh1VDg_Q"
    />
    <script
      defer
      src="https://cloud.umami.is/script.js"
      data-website-id="749f2f00-7112-4580-bed7-fd758fd6d328"></script>
  </head>
  <body>
    <Header data={data} />
    <main class="min-h-screen overflow-hidden">
      <slot />
    </main>
    <Footer data={data} />
  </body>
</html>
